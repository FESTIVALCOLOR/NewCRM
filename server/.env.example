# =========================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# =========================
# Для Railway.app PostgreSQL (автоматически заполнится)
DATABASE_URL=postgresql://user:password@hostname:5432/railway

# Для локальной разработки (SQLite)
# DATABASE_URL=sqlite:///./test.db

# =========================
# JWT АУТЕНТИФИКАЦИЯ
# =========================
# Секретный ключ (сгенерировать: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =========================
# ЯНДЕКС.ДИСК API
# =========================
YANDEX_DISK_TOKEN=y0_your_token_here

# =========================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# =========================
APP_NAME="Interior Studio CRM API"
APP_VERSION="1.0.0"
DEBUG=false
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# =========================
# НАСТРОЙКИ ФАЙЛОВ
# =========================
MAX_FILE_SIZE_MB=50
FILE_STORAGE_PATH=./uploads
PREVIEW_CACHE_PATH=./previews
